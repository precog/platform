# accounts-v1-b - ReportGrid beta auth service (v1/backup)
#
#

description "accounts-v1-b - ReportGrid beta auth service (v1/backup)"

start on runlevel [2345]
stop on runlevel [06]

respawn

pre-start script
  [ -d /var/run/precog ] || install -m 755 -o precog -g precog -d /var/run/precog
end script

script
  if [ -f /etc/default/accounts-v1-b ]; then . /etc/default/accounts-v1-b; fi
  su precog -s "/bin/bash" -c "/usr/bin/java $JAVA_OPTS -Dlogback.configurationFile=/etc/precog/accounts-v1-b.logging.xml -jar /usr/share/java/accounts-v1-b.jar --configFile /etc/precog/accounts-v1-b.conf >> /var/log/precog/accounts-v1-b.stdout.log 2>&1"
end script

post-start script
  echo `status accounts-v1-b | egrep -o '[0-9]+$' | head -n1` > /var/run/precog/accounts-v1-b.pid
end script
