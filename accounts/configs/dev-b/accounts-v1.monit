check process accounts-v1-b with pidfile /var/run/precog/accounts-v1-b.pid
  start program = "/sbin/start accounts-v1-b" with timeout 30 seconds
  stop program  = "/sbin/stop accounts-v1-b"
  if failed port 31064 protocol http and request '/accounts/v1/health' with timeout 60 seconds for 3 cycles
     then exec "/opt/precog/threaddump.sh accounts-v1-b"
  if failed port 31064 protocol http and request '/accounts/v1/health' with timeout 60 seconds for 8 cycles
     then restart
  if 3 restarts within 10 cycles then timeout
  group accounts-v1-b

# Watch server log for issues
check file accounts-v1-b.server.log with path /var/log/precog/accounts-v1-b.server.log
  if match "Exception" for 3 cycles then alert
  depends on accounts-v1-b
  group accounts-v1-b
