check process dev-ingest-v1 with pidfile /var/run/precog/ingest-v1.pid
  start program = "/usr/sbin/service ingest-v1 start" with timeout 30 seconds
  stop program  = "/usr/sbin/service ingest-v1 stop"
  if failed port 30060 protocol http and request '/blueeyes/services/ingest/v1/health' with timeout 15 seconds for 3 cycles 
     then exec "/opt/precog/threaddump.sh ingest-v1"
  if failed port 30060 protocol http and request '/blueeyes/services/ingest/v1/health' with timeout 15 seconds for 8 cycles 
     then restart
  if 3 restarts within 10 cycles then timeout
  group ingest-v1

# Watch server log for issues
check file ingest-v1.server.log with path /var/log/precog/ingest-v1.server.log
  if match "Exception" for 3 cycles then alert
  depends on ingest-v1
  group ingest-v1


