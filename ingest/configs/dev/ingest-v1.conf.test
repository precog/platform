server {
  port = 30060
  sslPort = 30061
  sslEnable = false

  log {
    level = "info"
    console = true
    filename = "/var/log/reportgrid/ingest-v1.server.log"
    roll = "daily"
    use_parents = false
  }
}

services {
  ingest {
    v1 {
      log {
        level = "debug"
        console = true
        filename = "/var/log/reportgrid/ingest-v1.log"
        roll = "daily"
        use_parents = false
      }

      requestLog {
        enabled = false 
        file = "/var/log/reportgrid/ingest-v1.request.log"
        roll = "daily"
        fields = "date time c-ip cs-method cs-uri-stem cs-uri-query sc-status cs-content"
        formatter = "w3cs"
        excludePaths = "/blueeyes/services/ingest/v1/health"
      }

      eventStore {
        local {
          topic = "local_event_cache"
          broker {
            host = "localhost"
            port = 9082
          }
          serializer.class = "com.precog.ingest.kafka.KafkaEventCodec"
        }
        central {
          topic = "central_event_store"
          zk {
            connect = "devqclus03.reportgrid.com:2181"
          }
          serializer.class = "com.precog.ingest.kafka.KafkaIngestMessageCodec"
        }
      }

      tokenManager {
        mongo {
          servers = ["devmongo01.reportgrid.com:27017"]
        }
        cached = true
      }

      usageLogging {
        token = "DB6DEF4F-678A-4F7D-9897-F920762887F1"
        environment = "dev"
      }
    }
  }
}
