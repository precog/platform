check process ingest-v1 with pidfile /var/run/reportgrid/ingest-v1.pid
  start program = "/usr/sbin/service ingest-v1 start" with timeout 30 seconds
  stop program  = "/usr/sbin/service ingest-v1 stop"
  if failed port 30050 protocol http and request '/blueeyes/services/ingest/v1/health' with timeout 15 seconds for 3 cycles then restart
  if 3 restarts within 10 cycles then timeout
  group ingest-v1

check file ingest-v1-health.log with path /var/log/reportgrid/ingest-v1-health.log
  start program  = "/usr/bin/touch -c /var/log/reportgrid/ingest-v1-health.log && /bin/chown reportgrid:reportgrid /var/log/reportgrid/ingest-v1-health.log"
  stop program  = "/bin/rm /var/log/reportgrid/ingest-v1-health.log"
  if timestamp > 20 minutes then alert
  if match "ERROR" for 3 cycles then alert
  depends on ingest-v1
  group ingest-v1
