check process play-shard-v1 with pidfile /var/run/precog/play-shard-v1.pid
  start program = "/usr/sbin/service play-shard-v1 start" with timeout 30 seconds
  stop program  = "/usr/sbin/service play-shard-v1 stop"
  if failed port 30080 protocol http and request '/blueeyes/services/shard/v1/health' with timeout 15 seconds for 3 cycles 
     then exec "/opt/precog/threaddump.sh play-shard-v1"
  if failed port 30080 protocol http and request '/blueeyes/services/shard/v1/health' with timeout 15 seconds for 8 cycles 
     then restart
  if 3 restarts within 10 cycles then timeout
  group play-shard-v1

# Watch server log for issues
check file play-shard-v1.server.log with path /var/log/precog/play-shard-v1.server.log
  if match "Exception" for 3 cycles then alert
  depends on play-shard-v1
  group play-shard-v1


