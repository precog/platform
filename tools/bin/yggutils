#!/bin/bash

bindir=`dirname $0`

STACKSIZE=4m
HEAPSIZE=512M

JVM_OPTS="-server -Xss${STACKSIZE} -Xmx${HEAPSIZE} -Xms${HEAPSIZE}"
GC_OPTS=""

java $JVM_OPTS $GC_OPTS -Dlog4j.configuration=$bindir/../conf/yggutils.log4j.properties -Dlogback.configurationFile=$bindir/../conf/yggutils.logging.xml -cp $bindir/../lib/yggdrasil-assembly-0.0.1-SNAPSHOT.jar com.precog.yggdrasil.util.YggUtils "$@"
